{% extends 'hommeultime.html.twig' %}

{% block title %}Création séance{% endblock %}

{% block stylesheets %}
    {{ parent() }}


{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $('#seance_programmes').select2({
                theme: "bootstrap-5",
                width: $(this).data('width') ? $(this).data('width') : $(this).hasClass('w-100') ? '100%' : 'style',
                placeholder: $(this).data('placeholder'),
                closeOnSelect: false,
            })
        });
    </script>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col">
            <h5>Création séance</h5>
            {{ form(form) }}

            {{ form_end(form) }}
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col">
            <h5>Création nouvelle zone séance</h5>
            {{ form(zoneForm) }}
            {{ form_end(zoneForm) }}
        </div>
    </div>

{% endblock %}
