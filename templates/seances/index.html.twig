{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/seances.css') }}" type="text/css">
    <link href="{{ asset('styles/programme.css') }}" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $(document).ready(function () {
            $(".seance").click(function (event) {
                $('#seance_' + event.target.id).slideToggle();
            });

            $('#details_programme').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget) ;
                var recipient = button.data('programmeid');
                var modal = $(this);

                $.ajax({
                    url:'{{ (path('programme.action')) }}',
                    type: "GET",
                    dataType: "html",
                    data: {
                        "id": recipient
                    },
                    async: true,
                    success: function (data)
                    {
                        modal.find('.modal-body ').html(data);
                    }
                });

            })
        });
    </script>
    <script>
        $(document).on('click', 'button.ajax', function(){
            that = $(this);

            return false;

        });
    </script>

{% endblock %}

