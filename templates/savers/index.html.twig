{% extends 'hommeultime.html.twig' %}

{% block title %}S.A.V.E.R.S{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://unpkg.com/bootstrap-table@1.22.1/dist/bootstrap-table.min.css" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://unpkg.com/bootstrap-table@1.22.1/dist/bootstrap-table.min.js"></script>
    <script src="https://unpkg.com/bootstrap-table@1.22.1/dist/extensions/mobile/bootstrap-table-mobile.min.js"></script>
    <script>
        $(function () {
            $('#table').bootstrapTable()
        })
    </script>
{% endblock %}

{% block content %}

    <table
            class="table table-striped table-dark"
            id="table"
            data-show-columns="true"
            data-mobile-responsive="true"
            data-check-on-init="true">
        <thead>
        <tr>
            <th scope="col" data-field="s">S</th>
            <th scope="col" data-field="a">A</th>
            <th scope="col" data-field="v">V</th>
            <th scope="col" data-field="e">R</th>
            <th scope="col" data-field="r">R</th>
            <th scope="col" data-field="sc">S</th>
            <th scope="col" data-field="date">Date</th>
        </tr>
        </thead>

        <tbody>

        {% for  saver in saverses %}
            <tr class="table">
                <td>{{ (saver.silence)?"👌🏻 ":"🙄 " }}</td>
                <td>{{ (saver.affirmations)?"👌🏻 ":"🙄 " }}</td>
                <td>{{ (saver.visualisation)?"👌🏻 ":"🙄 " }}</td>
                <td>{{ (saver.exercice)?"👌🏻 ":"🙄 " }}</td>
                <td>{{ (saver.reading)?"👌🏻 ":"🙄 " }}</td>
                <td>{{ (saver.scribing)?"👌🏻 ":"🙄 " }}</td>
                <td>{{ saver.createdAt | date('d-m-Y') }}<br>
                    {{ saver.createdAt | date('H:i') }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    <div class="col">

        {{ form_start(form) }}
        {{ form_row(form.silence) }}
        {{ form_row(form.affirmations) }}
        {{ form_row(form.visualisation) }}
        {{ form_row(form.exercice) }}
        {{ form_row(form.reading) }}
        {{ form_row(form.scribing) }}
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>

{% endblock %}
